{
  "name": "jobly-root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install-all": "npm install && npm --prefix backend install && npm --prefix jobly-frontend install",
    "start": "concurrently \"npm run backend-start\" \"npm run frontend-start\"",
    "backend-start": "npm --prefix backend run start",
    "frontend-start": "npm --prefix jobly-frontend run start",
    "build": "npm run build-backend && npm run build-frontend",
    "build-backend": "echo 'No build needed for backend'",
    "build-frontend": "npm --prefix jobly-frontend run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
